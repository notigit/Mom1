<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.xiaoaitouch.mom.view.RoundedImageView
            android:id="@+id/user_head_image_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:src="@drawable/week12"
            app:border_color="@color/app_top_color"
            app:border_width="2dip"
            app:corner_radius="90dp"
            app:mutate_background="true"
            app:oval="false" />


        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_below="@+id/user_head_image_iv"
            android:layout_centerHorizontal="true"
            android:background="@color/app_top_color" />
    </RelativeLayout>


</LinearLayout>
