<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/home_fragment_title_ray"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_pandect_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/home_pandect_tv"
                android:textColor="@color/main_top_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/home_sports_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/home_sports_tv"
                android:textColor="@color/main_top_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/home_weight_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/home_weight_tv"
                android:textColor="@color/main_top_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/home_symptom_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/home_symptom_tv"
                android:textColor="@color/main_top_text_color"
                android:textSize="16sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="47dp"
            android:background="@color/horizontal_line" />

        <TextView
            android:id="@+id/home_line_view"
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:layout_marginTop="46dp"
            android:background="@color/app_top_color" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>