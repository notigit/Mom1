<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/umeng_update_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <!-- Title -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:background="@drawable/main_top_dialog"
            android:gravity="center"
            android:text="新版本"
            android:textColor="@color/white"
            android:textSize="@dimen/size_dp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_dialog"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Content -->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/umeng_update_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:focusable="true"
                        android:lineSpacingExtra="4dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_dp_16" />
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/umeng_update_id_ok"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/welcome_button_bg"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="更新"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_dp_18" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>