<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/histogram_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/histogram_top_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/size_dp_16" />

        <TextView
            android:id="@+id/histogram_top_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="4dp"
            android:textSize="@dimen/size_dp_16" />

    </RelativeLayout>

    <View
        android:id="@+id/histogram_top_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/histogram_view_ray"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="12dp">

        <com.devsmart.android.ui.HorizontalListView
            android:id="@+id/histogram_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:focusable="false" />

        <TextView
            android:id="@+id/histogram_no_data_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-40dp"
            android:alpha="0.7"
            android:gravity="center"
            android:text="暂无数据"
            android:textSize="@dimen/size_dp_24" />
    </RelativeLayout>


    <View
        android:id="@+id/histogram_buttom_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-28dp"
        android:background="@color/line_color" />


</LinearLayout>
