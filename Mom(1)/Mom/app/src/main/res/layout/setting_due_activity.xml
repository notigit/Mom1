<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_top_height"
        android:background="@color/white">

        <TextView
            android:id="@+id/top_title_back_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/top_arrow_icon"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" />

        <TextView
            android:id="@+id/top_title_tv"
            style="@style/BaseItemText"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="@dimen/size_dp_20"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/setting_due_input_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/setting_due_input_date_tv"
            android:textColor="@color/main_top_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/setting_due_calculation_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/setting_due_calculation_date_tv"
            android:textColor="@color/main_top_text_color"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/horizontal_line" />

    <TextView
        android:id="@+id/setting_due_line_view"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:layout_marginTop="-1dp"
        android:background="@color/app_top_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/setting_due_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>