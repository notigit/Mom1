<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/can_or_not_icon_iv"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/can_or_not_right_ray"
        android:layout_toRightOf="@+id/can_or_not_icon_iv">

        <TextView
            android:id="@+id/can_or_not_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#474747"
            android:textSize="@dimen/size_dp_16" />

        <TextView
            android:id="@+id/can_or_not_details_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="2"
            android:textColor="#737373"
            android:textSize="@dimen/size_dp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/can_or_not_right_ray"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/can_or_not_tips_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/can_or_not_tips_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp" />
    </RelativeLayout>


</RelativeLayout>
