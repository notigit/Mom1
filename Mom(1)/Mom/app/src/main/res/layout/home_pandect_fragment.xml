<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:histogramView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.xiaoaitouch.mom.view.HistogramView
                android:id="@+id/home_pandect_sport_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                histogramView:bg="@drawable/sports_weather_bg"
                histogramView:buttom_text_color="@color/white"
                histogramView:line_top_color="@color/sports_histogram_line_color"
                histogramView:text_color="@color/white"
                histogramView:type="1" />

            <com.xiaoaitouch.mom.view.HistogramView
                android:id="@+id/home_pandect_weight_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                histogramView:bg="@drawable/weight_calipers_bg"
                histogramView:buttom_text_color="@color/white"
                histogramView:line_top_color="@color/weight_histogram_line_color"
                histogramView:text_color="@color/white"
                histogramView:type="2" />

            <com.xiaoaitouch.mom.view.HistogramView
                android:id="@+id/home_pandect_symptom_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                histogramView:bg="@drawable/symptom_select_bg"
                histogramView:buttom_text_color="@color/white"
                histogramView:line_top_color="@color/symptom_histogram_line_color"
                histogramView:text_color="@color/white"
                histogramView:type="3" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
