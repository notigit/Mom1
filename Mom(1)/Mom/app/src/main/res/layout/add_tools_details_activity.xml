<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="18dp"
        android:background="@drawable/tools_draw_circle_bg"
        android:gravity="center"
        android:text="工具"
        android:textColor="@color/white"
        android:textSize="@dimen/size_dp_16" />


    <ListView
        android:id="@+id/add_toos_details_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:listSelector="@drawable/common_single_item"
        android:scrollbars="none"></ListView>

    <View
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_marginLeft="40dp"
        android:background="@color/app_top_color" />

    <TextView
        android:id="@+id/add_toos_details_tv"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginLeft="23dp"
        android:background="@drawable/tools_draw_circle_bg"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="@dimen/size_dp_20" />

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp" />

</LinearLayout>