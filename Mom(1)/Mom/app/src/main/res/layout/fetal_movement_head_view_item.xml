<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fetal_movement_tips_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="五分钟内连续记录只算一次有效记录"
            android:textColor="#7D7D7D"
            android:textSize="@dimen/size_dp_16" />

        <ImageView
            android:id="@+id/fetal_movement_click_animation_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/fetal_movement_tips_tv"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/fetal_movement_click_animation_icon" />

        <RelativeLayout
            android:id="@+id/fetal_movement_tips_ray"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/fetal_movement_tips_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/draw_circle_default_bg"
            android:orientation="vertical">


            <TextView
                android:id="@+id/fetal_movement_time_show_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/fetal_movement_click_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fetal_movement_time_show_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="@dimen/size_dp_20" />
        </RelativeLayout>


        <TextView
            android:id="@+id/fetal_movement_event_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fetal_movement_tips_ray"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/georama_bg"
            android:gravity="center"
            android:text="开始"
            android:textColor="@color/app_top_color"
            android:textSize="@dimen/size_dp_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/app_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.26"
                android:gravity="center"
                android:text="日期"
                android:textColor="#7D7D7D"
                android:textSize="@dimen/size_dp_16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.26"
                android:gravity="center"
                android:text="开始时间"
                android:textColor="#7D7D7D"
                android:textSize="@dimen/size_dp_16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.26"
                android:gravity="center"
                android:text="胎动次数"
                android:textColor="#7D7D7D"
                android:textSize="@dimen/size_dp_16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.22"
                android:gravity="center"
                android:text="结果"
                android:textColor="#7D7D7D"
                android:textSize="@dimen/size_dp_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_bg" />


    </LinearLayout>
</LinearLayout>