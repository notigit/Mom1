<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="12dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/can_or_not_image_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/can_or_not_eat_image1" />

    <TextView
        android:id="@+id/can_or_not_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/can_or_not_image_iv"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:textColor="@color/main_top_text_color"
        android:textSize="@dimen/size_dp_14" />


</RelativeLayout>
